{{#*inline "body"}}

<div class="mb-4">
    <h3>Export database</h3>
</div>

<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title">Download the SQL data</h5>
    <p class="card-text">This might take a while, be patient.</p>
    <a href="/admin/api/v1/export-database.sql" download class="btn btn-primary">Download</a>
  </div>
</div>

<div class="mb-4">
    <h3>Restore deactivated workers</h3>
</div>

<ul class="list-group">
    {{#each workers as |w|}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{w.name}}
            <form action="/admin/api/v1/restore-worker" method="post">
                <button class="btn btn-success reactivate-btn">Reactivate</button>
                <input type="hidden" id="hidden-user" name="user" value="{{w.id}}">

            </form>
        </li>
    {{/each}}
</ul>

{{/inline}}
{{> base.hbs}}